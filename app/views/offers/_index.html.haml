!!!

- if company_signed_in?
  = render '/offers/company_header'
- else user_signed_in?
  = render '/offers/user_header'

.contents.slider
  - @offers.shuffle.first(5).each do |offer|
    .contents__box
      .main-contents
        .main-contents__company
          = link_to "/offers/#{offer.id}" do
            %span
              = image_tag(offer.image) if offer.image
          .main-contents__details
            .main-contents__details__job
              = offer.job
            %h2.main-contents__details__title
              = link_to "/offers/#{offer.id}" do
                %span
                  = offer.title
            %p.main-contents__details__name
              %img.icon{:alt => "Wantedly", :height => "44px", :src => "https://de7iszmjjjuya.cloudfront.net/assets/wantedly-logo-5906d9a368d0bcdd2919553127357d4d.svg", :width => "44px", :margin => "0"}/
              %a{href: ""} 
                = offer.company.company_name
            .main-contents__details__like
              %a{href: ""}
                %i.fa.fa-bullhorn
  .slick-dots

.recruitment-contents
  .recruitment-contents__center
    .recruitment-contents__center__left
      .recruitment-contents__center__left__inner
        .recruitment-contents__center__left__inner__menu
          .menu-header
            %h4 検索条件
          .menu-contents
            .job-form
              %input#search{:autocomplete => "off", :dir => "auto", :name => "q", :placeholder => "エンジニア", :spellcheck => "false", :style => "position: relative; vertical-align: top;", :type => "text"}/
            .job-form
              %input#search{:autocomplete => "off", :dir => "auto", :name => "q", :placeholder => "中途採用", :spellcheck => "false", :style => "position: relative; vertical-align: top;", :type => "text"}/
            .job-form
              %input#search{:autocomplete => "off", :dir => "auto", :name => "q", :placeholder => "地域や特徴などの条件を追加", :spellcheck => "false", :style => "position: relative; vertical-align: top;", :type => "text"}/
            .job-word
              %ul
                %li 秘書
                %li アニメ
                %li ブライダル
                %li コンサルタント
            .job-region
              %h5 地域
              %ul
                %li 東京
                %li 大阪
                %li 沖縄
                %li 北海道
            .job-characteristics
              %h5 特徴
              %ul
                %li TechCrunchに掲載実績あり
                %li 海外進出している
                %li 1億円以上の資金を調達済み
                %li Wantedlyに初登場

    .recruitment-contents__center__main
      .recruitment-contents__center__main__menu
        .recruitment-count 
          %p 10/2509
        .recruitment-status
          %ul 
            %li
              %p 並べ替え
            %li
              %a{href: ""} おすすめ
            %li
              %a{href: ""} 新着
            %li
              %a{href: ""} 人気
      .recruitment-contents__center__main__area
        - @offers.each do |offer|
          .recruitment-contents__center__main__area__company
            = link_to "/offers/#{offer.id}" do
              %span
                = image_tag(offer.image) if offer.image
            .recruitment-contents__center__main__area__details
              .recruitment-contents__center__main__area__details__job
                = offer.job
              %h2.recruitment-contents__center__main__area__details__title
                = link_to "/offers/#{offer.id}" do
                  %span
                    = offer.title
              %p.recruitment-contents__center__main__area__details__message
                = link_to "/offers/#{offer.id}" do
                  %span
                    = offer.thing
              .recruitment-contents__center__main__area__details__name
                .recruitment-contents__center__main__area__details__name__icon
                  %a{href: ""}
                    %img.icon{:alt => "Wantedly", :src => "https://de7iszmjjjuya.cloudfront.net/assets/wantedly-logo-5906d9a368d0bcdd2919553127357d4d.svg",}/
                %p.recruitment-contents__center__main__area__details__name__text
                  %a{href: ""}
                    = offer.company.company_name
                .recruitment-contents__center__main__area__details__name__like
                  %a{href: ""}
                    %i.fa.fa-bullhorn

= render '/offers/footer_index'
